<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultado"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:scrollHorizontally="true"
        android:textSize="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#ccc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="30dp"
            android:id="@+id/num7"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="8"
            android:textSize="30dp"
            android:id="@+id/num8"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="9"
            android:textSize="30dp"
            android:id="@+id/num9"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:textSize="30dp"
            android:id="@+id/btnSoma"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="%"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="30dp"
            android:id="@+id/num4"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:id="@+id/num5"
            android:textSize="30dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            android:id="@+id/num6"
            android:textSize="30dp"
            android:onClick="Soma"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-"
            android:textSize="30dp"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/raiz"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            android:textSize="30dp"
            android:id="@+id/num1"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2"
            android:textSize="30dp"
            android:id="@+id/num2"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            android:textSize="30dp"
            android:id="@+id/num3"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="x"
            android:textSize="30dp"/>

        <Button

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="XÂ²"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="."
            android:textSize="30dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="0"
            android:textSize="30dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="00"
            android:textSize="30dp"
            android:onClick="Soma"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="/"
            android:textSize="30dp"/>

        <Button

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="="
            android:background="#cc00"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>
